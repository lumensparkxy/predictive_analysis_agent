# Snowflake Connection Settings
# Copy this file to .env and update with your actual credentials

# Snowflake Account Information
SNOWFLAKE_ACCOUNT=your_account_identifier
SNOWFLAKE_USER=your_username
SNOWFLAKE_PASSWORD=your_password
SNOWFLAKE_WAREHOUSE=your_warehouse
SNOWFLAKE_DATABASE=your_database
SNOWFLAKE_SCHEMA=your_schema
SNOWFLAKE_ROLE=your_role

# Optional: Alternative authentication
# SNOWFLAKE_PRIVATE_KEY_PATH=/path/to/private_key.p8
# SNOWFLAKE_PRIVATE_KEY_PASSPHRASE=your_passphrase

# Application Settings
APP_NAME=snowflake-analytics
APP_VERSION=1.0.0
LOG_LEVEL=INFO
DEBUG=false

# Data Collection Settings
DATA_COLLECTION_INTERVAL=3600  # seconds (1 hour)
DATA_RETENTION_DAYS=30
MAX_ROWS_PER_QUERY=100000

# Cache Settings
CACHE_TTL=3600  # seconds (1 hour)
CACHE_SIZE_LIMIT=1GB

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Alert Settings
ENABLE_ALERTS=true
ALERT_EMAIL_ENABLED=false
ALERT_SLACK_ENABLED=false

# Email Settings (if enabled)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_FROM_EMAIL=alerts@yourcompany.com
ALERT_TO_EMAILS=admin@yourcompany.com,team@yourcompany.com

# Slack Settings (if enabled)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Performance Settings
MAX_CONCURRENT_QUERIES=5
QUERY_TIMEOUT=300  # seconds (5 minutes)
BATCH_SIZE=10000
