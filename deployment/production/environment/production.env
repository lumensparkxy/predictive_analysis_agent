# Snowflake Analytics - Production Environment Configuration
# Copy this file to production server as /opt/analytics/config/production.env

# Application Settings
APP_NAME=snowflake-analytics
APP_VERSION=1.0.0
APP_ENV=production
DEBUG=false
LOG_LEVEL=INFO

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
WORKER_TIMEOUT=300

# Snowflake Connection Settings
SNOWFLAKE_ACCOUNT=your_production_account
SNOWFLAKE_USER=analytics_service_user
SNOWFLAKE_WAREHOUSE=ANALYTICS_WH
SNOWFLAKE_DATABASE=ANALYTICS_DB
SNOWFLAKE_SCHEMA=PUBLIC
SNOWFLAKE_ROLE=ANALYTICS_ROLE

# Database Settings
DATABASE_URL=postgresql://analytics:password@localhost:5432/analytics_prod
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Security Settings
SECRET_KEY=your-super-secret-production-key-change-this
JWT_SECRET=your-jwt-secret-key-change-this
ENCRYPTION_KEY=your-encryption-key-32-chars-long
API_KEY_EXPIRY_HOURS=24

# SSL/TLS Settings
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/certificates/analytics.crt
SSL_KEY_PATH=/etc/nginx/ssl/certificates/analytics.key

# Monitoring Settings
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus_multiproc

# Logging Configuration
LOG_FILE=/opt/analytics/logs/application.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30
STRUCTURED_LOGGING=true

# Data Collection Settings
DATA_COLLECTION_INTERVAL=300
DATA_RETENTION_DAYS=365
MAX_ROWS_PER_QUERY=1000000
BATCH_SIZE=50000

# Alert Settings
ENABLE_ALERTS=true
ALERT_EMAIL_ENABLED=true
ALERT_SLACK_ENABLED=true
ALERT_PAGERDUTY_ENABLED=false

# Performance Settings
MAX_CONCURRENT_QUERIES=10
QUERY_TIMEOUT=600
CONNECTION_POOL_SIZE=20
MAX_OVERFLOW=10

# Backup Settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=90
BACKUP_LOCATION=/opt/analytics/backups

# Feature Flags
ENABLE_ANOMALY_DETECTION=true
ENABLE_COST_PREDICTION=true
ENABLE_USAGE_PREDICTION=true
ENABLE_RECOMMENDATIONS=true

# External Services
ENABLE_EXTERNAL_NOTIFICATIONS=true
RATE_LIMIT_PER_MINUTE=1000
ENABLE_CORS=false